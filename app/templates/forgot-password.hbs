<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card mt-3">
                <div class="card-header">Восстановить пароль</div>
                <div class="card-body">
                    <div class="container">
                    {{#bs-form formLayout="horizontal" model=this onSubmit=(action "forgotPassword") as |form|}}
                        
                        {{form.element controlType="email" label="E-Mail Адрес" placeholder="Email" property="email" required=true}}

                        {{#form.group}}
                            <div class="offset-sm-4 col-sm-8">
                              {{bs-button type="primary" buttonType="submit" icon="fa fa-btn fa-envelope" defaultText="Отправить ссылку для активации" textState=buttonState loadingText="Подождите..."}}
                            </div>
                        {{/form.group}}
                        
                    {{/bs-form}}
                    
                    {{#if errors}}
                        <div class="alert alert-danger">
                            <ul>
                                {{#each errors as |message|}}
                                  <li>{{message}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                    
                    {{#bs-alert type="success" visible=notifyVisible}}
                       <strong>{{notifyMessage}}</strong>
                    {{/bs-alert}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>