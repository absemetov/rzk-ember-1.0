<div class="row">

	  {{input class='form-control' value=q enter="search"}}
	  
	  {{#if model}}	
		  <div class="panel panel-success">
				
			    <div class="table-responsive">
					  <table class="table">
					      <thead>
				          <tr>
				          	<th>#</th>
				            <th>Фамилия, Имя</th>
				            <th>E-mail</th>
				            <th>Телефон</th>
				            <th>Адрес</th>
				          </tr>
				        </thead>
				        <tbody>
					    {{#each model as |order|}}
					      <tr>
					      	<td>
						      {{order.id}}
						    </td>
						    <td>
						      {{#link-to 'orders.order' order}} {{ order.nameUser }} {{/link-to}}
						    </td>
						    <td>
						      {{ order.tel }}
						    </td>
						    <td>
						      {{ order.carrierNumber }}
						    </td>
						    <td>
						      {{ order.address }}
						    </td>
						  </tr>
					    {{/each}}
					    </tbody>
					  </table>
				</div>
	        </div>
        
          	{{page-paginate pagination = model.meta.pagination link_to='orders'}}
        
        {{else}}
		  	No data
		{{/if}}
</div>