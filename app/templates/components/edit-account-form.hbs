{{#bs-form formLayout="horizontal" model=user onSubmit=(action "save") as |form|}}

    {{form.element validation=lastNameValidation useIcons=false controlType="text" label="Фамилия" autofocus=true property="lastName" required=true}}

    {{form.element validation=firstNameValidation useIcons=false controlType="text" label="Имя" property="firstName" required=true}}

    {{form.element validation=telValidation useIcons=false controlType="text" label="Мобильный номер" title="+380xx1234567" property="phoneNumber" pattern="^[\(\)\s-]*(((\+?[\(\)\s-]*3)?[\(\)\s-]*8)|(\+?[\(\)\s-]*7))?([\(\)\s-]*\d){10}[\(\)\s-]*$" required=true}}

    {{form.element useIcons=false controlType="text" label="Адрес" property="address"}}

    {{form.element validation=emailValidation useIcons=false controlType="email" label="Email" required=true value=emailUser onChange=(action (mut emailUser))}}

    {{#form.group}}
        <div class="offset-sm-4 col-sm-8">
          {{bs-button type="primary" buttonType="submit" icon="fa fa-btn fa-user" defaultText="Сохранить" textState=buttonState loadingText="Подождите..."}}
        </div>
    {{/form.group}}
	    
{{/bs-form}}

{{#bs-alert type="success" visible=successMessageVisible}}
  <strong>Данные сохранены.</strong>
{{/bs-alert}}

{{#if user.errors.messages}}
    <div class="alert alert-danger">
        <ul>
            {{#each user.errors.messages as |message|}}
              <li>{{message}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}