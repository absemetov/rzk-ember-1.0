<div class="panel panel-success">
	
	<div class="panel-heading">
  	  Order <strong>#{{order.id}}</strong> {{order.nameUser}} ({{moment-from-now order.createdAt interval=1000}})
  	</div>
  	
	<div class="panel-body">
	  <form id="order_form" class="form-horizontal" method="post">
		    <div class="form-group">
		      <div class="col-sm-12 btn-group" role="group" aria-label="...">

			    <label class="radio-inline">
				    <input type="radio" name="status_id" value="1"> Новый
				</label>
			  
			  </div>
		    </div>
		
		    <div class="form-group">
		   
			    <div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Имя фамилия</div>
				    <input type="text" class="form-control" name="name_user">
				  </div>
			    </div>
			    
			    <div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Телефон</div>
				    <input type="text" class="form-control" name="tel">
				  </div>
			    </div>
			    
			   
			    
		   </div>
		   
		   <div class="form-group">

		   		<div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Адрес</div>
				    <input type="text" class="form-control" name="address">
				  </div>
			    </div>
		   		
		   		<div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Перевозчик</div>
				    <select class="form-control" name="carrier_id">
				      <option value="1">Самовывоз со склада</option>
				      <option value="2">Самовывоз со склада</option>
				      <option value="3">Самовывоз со склада</option>
					</select>
				  </div>
			    </div>
			    
		   </div>

		   <div class="form-group">
		   		<div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Отделение</div>
				    <input type="number" min="1" class="form-control" name="carrier_number">
				  </div>
			    </div>
			    
			    <div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Оплата</div>
				    <select class="form-control" name="payment_id">
				      <option value="1">ПриватБанк</option>
					</select>
				  </div>
			    </div>

		   </div>
		   
		   <div class="form-group">

		    	<div class="col-sm-6">
			      <div class="input-group">
				    <div class="input-group-addon">Сумма</div>
				    <input type="text" class="form-control" name="summ">
				  </div>
			    </div>
		      
		      <div class="col-sm-6">
		        <div class="input-group">
			      <div class="input-group-addon">Комментарий</div>
			      <input type="text" class="form-control" name="comment">
			      <input type="hidden" class="form-control" name="wd" id="wd" value="saveAndClose">
			    </div>
			  </div>
		   </div>
		   
		   <div class="form-group">
		    <div class="col-sm-6">
		      <button type="submit" class="btn btn-primary">Save and Close</button>
		      <button type="submit" class="btn btn-primary">Save</button>
		      <a href="#" class="btn btn-default" role="button">Close</a>
		    </div>
		    <div class="col-sm-6">
		      <button type="button" class="btn btn-default" data-toggle="modal" data-target="#exportModal">Export to XLS</button>
		      <a href="#" target="_blank" class="btn btn-default" role="button">Поделиться</a>
		      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
		    </div>
		  </div>
		
		</form>
	</div>
	
	<div class="table-responsive">
	    <table class="table table-hover table-bordered">
			<thead>
			  <tr>
	            <th>Код товара</th>
	            <th>Наименование</th>
	            <th>Количество</th>
	            <th>Цена</th>
	            <th>Сумма</th>
	          </tr>
			</thead>
			<tbody>
		        
		        {{#each order.lineItems as |goods|}}
                    <tr>
    		          <td>
    	                {{goods.id}}
    		          </td>
    		          <td>
    		            {{goods.name}}
    		          </td>
    		          <td>{{goods.qty}} UNIT</td>
    		          <td>
    		            {{goods.price}} UAH
    		          </td>
    		          <td>
    		            {{goods.price}} SUMM
    		          </td>
    		          
    		        </tr>
                {{/each}}
						     
						
			  
			  <tr>
			        <td colspan="6">
			           Всего наименований <strong></strong>, количество 
			        </td>
			  </tr>
			  
			  <tr>
			        <td colspan="6">
			           Cумма <strong></strong> UAH
			        </td>
			  </tr>
			  
		    </tbody>
		  </table>
		</div>
	
	
</div>