<div class="container-fluid">
  <h3 class="mt-3">Результаты поиска</h3>
  {{#if model.catalogs}}
    <div class="list-group mt-3">
      {{#each model.catalogs as |catalog|}}
        {{#link-to 'catalogs.show' catalog.url class="list-group-item list-group-item-action"}}
          {{catalog.name}} ({{catalog.url}})
        {{/link-to}}
      {{/each}}
    </div>  
  {{/if}}
  
  {{#if model.products}}
    <div class="card-deck">
        {{#each model.products as |product|}}
          {{product-card product=product compact=true openModel=openModel modalData=modalData modalCount=modalCount}}
        {{else}}
          <div class="col-12">Товары не найдены</div>
        {{/each}}
    </div>
    
    {{infinity-loader infinityModel=model.products triggerOffset=1000 loadingText="Загружаем..." loadedText=""}}
    
    {{modal-goods openModel=openModel modalData=modalData modalCount=modalCount}}
  {{/if}}
  
  <div class="row mt-3">
      <div class="col-lg-2 offset-lg-10">
        <div class="branding">Powered by <img src="https://www.algolia.com/assets/algolia128x40.png" /></div>  
      </div>
  </div>
</div>