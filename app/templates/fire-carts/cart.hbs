<div class="container-fluid">  
  
  <nav class="breadcrumb mt-3">
    {{#link-to 'fire-carts' class="breadcrumb-item"}}<a href="">Корзины</a>{{/link-to}}
    <span class="breadcrumb-item active">{{ model.id }}</span>
  </nav>

  <div class="card mt-3">
    <div class="card-header">
      
        {{ moment-from-now model.timestamp interval=1000 }}
    
        {{#if model.ordered}}
          <span class="badge badge-danger">Заказ оформлен</span>                
        {{/if}}
        
        {{#if model.shared}}
          <span class="badge badge-success">Корзиной поделились</span>                
        {{/if}}
    </div>
    <table class="table table-hover table-bordered table-responsive mb-0">
        <thead>
          <tr>
            <th>#</th>
            <th>Код товара</th>
            <th>Наименование</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Сумма</th>
          </tr>
        </thead>
        
        {{fire-goods-list goods=model.items}}
        
    </table>
    <div class="card-footer">
        Сумма: <strong>{{format-currency model.total}}</strong> {{cart.shopCurrency}}
        {{#link-to 'share-cart' model.id}}Загрузить корзину{{/link-to}}
    </div>
  </div>

</div>